{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": ["es2018"],
      "strict": true,
      "rootDir": "./",
      "outDir": ".build",
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "config/**/*", "serverless.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }